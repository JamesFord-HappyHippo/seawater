# Seawater Climate Risk Platform - Environment Configuration
# Copy this file to .env and update with your actual values

# Application Configuration
NODE_ENV=development
APP_NAME=Seawater
LOG_LEVEL=debug

# Database Configuration (from CloudFormation outputs)
DB_HOST=seawater-dev.cluster-xxx.us-east-2.rds.amazonaws.com
DB_PORT=5432
DB_NAME=seawater
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_SSL=true

# External API Keys

# MapBox (Required for geocoding)
# Get from: https://account.mapbox.com/access-tokens/
MAPBOX_ACCESS_TOKEN=pk.your_mapbox_token_here

# FEMA National Risk Index (Optional - free access available)
# Get from: https://hazards.fema.gov/nri/data-resources#csvDownload
FEMA_API_KEY=optional_fema_api_key

# NOAA Climate Data Online (Optional)
# Get from: https://www.ncdc.noaa.gov/cdo-web/token
NOAA_API_KEY=optional_noaa_token

# USGS Earthquake API (Free - no key required)
# Docs: https://earthquake.usgs.gov/fdsnws/event/1/

# Premium Data Sources (Phase 2)
# First Street Foundation API
FIRST_STREET_API_KEY=your_first_street_key
FIRST_STREET_BASE_URL=https://api.firststreet.org/risk/v1

# ClimateCheck API  
CLIMATE_CHECK_API_KEY=your_climate_check_key
CLIMATE_CHECK_BASE_URL=https://api.climatecheck.com/v1

# AWS Configuration
AWS_REGION=us-east-2
AWS_ACCOUNT_ID=your_account_id

# API Gateway (from CloudFormation outputs)
API_BASE_URL=https://your-api-id.execute-api.us-east-2.amazonaws.com/dev

# Caching Configuration
REDIS_HOST=your-redis-cluster.cache.amazonaws.com
REDIS_PORT=6379
REDIS_TTL=3600

# Rate Limiting
DEFAULT_RATE_LIMIT=100
PREMIUM_RATE_LIMIT=1000

# Frontend Configuration (for React app)
REACT_APP_API_BASE_URL=https://your-api-id.execute-api.us-east-2.amazonaws.com/dev
REACT_APP_MAPBOX_ACCESS_TOKEN=pk.your_mapbox_token_here
REACT_APP_ENVIRONMENT=development

# Testing Configuration
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=seawater_test
TEST_MAPBOX_TOKEN=pk.test_token