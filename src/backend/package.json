{
  "name": "@seawater/backend",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "description": "Seawater Climate Risk Platform - Backend Lambda Functions",
  "main": "dist/index.js",
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.470.0",
    "@aws-sdk/client-lambda": "^3.470.0",
    "@aws-sdk/client-s3": "^3.470.0",
    "@aws-sdk/client-secrets-manager": "^3.470.0",
    "aws-lambda": "^1.0.7",
    "axios": "^1.6.0",
    "pg": "^8.11.3",
    "pg-promise": "^11.5.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "esbuild": "^0.19.8",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "scripts": {
    "build": "node build.js",
    "build:clean": "rm -rf dist && npm run build",
    "test": "jest",
    "lint": "eslint ../handlers ../helpers --ext .ts,.js",
    "format": "prettier --write \"../handlers/**/*.{ts,js}\" \"../helpers/**/*.{ts,js}\"",
    "deploy:test": "sam deploy --config-env test",
    "deploy:prod": "sam deploy --config-env prod",
    "package": "npm run build:clean && cd ../../ && bash package-lambdas.sh"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.(ts|js)",
      "**/?(*.)(test|spec).(ts|js)"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "import",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "import/order": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}